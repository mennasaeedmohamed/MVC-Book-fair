@model Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post">

    <div class="mb-3">
        <label for="Booktitle" class="form-label">Book title</label>
        <input type="text" class="form-control" id="Booktitle" asp-for="Title">
    </div>
    <div class="mb-3">
        <label for="Booktype" class="form-label">Book type</label>
        <input type="text" class="form-control" id="Booktype" asp-for="Type">
    </div>
    <div class="mb-3">
        <label for="authorname" class="form-label">Author name</label>
        <input type="text" class="form-control" id="authorname" asp-for="Author.Name">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

